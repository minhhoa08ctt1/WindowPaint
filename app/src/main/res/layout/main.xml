<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:pushtouch="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fl_main"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:background="#000000"></RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_yellow"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:background="#ffff00">

        </RelativeLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <minhhoa.com.windowpaint.SingleFingerView
        android:id="@+id/tiv"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        pushtouch:centerInParent="true"
        pushtouch:image_height="150dp"
        pushtouch:image_width="200dp"
        pushtouch:push_image="@drawable/push_btn"
        pushtouch:push_image_height="50dp"
        pushtouch:push_image_width="50dp" />
</FrameLayout>

